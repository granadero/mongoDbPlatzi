use("platzi_store")

db.createCollection('users', {
	validator: {
		$jsonSchema: {
			bsonType: 'object',
			required: [ 'email', 'password' ],
			properties: {
				last_name: {
					bsonType: 'string'
				},
				email: {
					bsonType: 'string',
					pattern: "^[A-Za-z\d.-]{1,}@[A-Za-z\d.-]{1,}[.]{1}[A-Za-z\d.-]{1,}$"
				},
				password: {
					bsonType: 'string',
					pattern: "^.{8,40}$"
				}
			}
		}
	}
})